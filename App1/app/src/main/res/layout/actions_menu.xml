<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mainbackground">>

    <RelativeLayout
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".customizeAct"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actions"
        android:id="@+id/actionsTitle"
        android:onClick="actionsInfo"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:textColor="#ff000000"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0 Skill Points"
            android:id="@+id/spLeft"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/actionsTitle"
            android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="400dp"
        android:layout_height="85dp"
        android:text="Buy  Actions"
        android:id="@+id/buyActionsBut"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/spLeft"
        android:layout_centerHorizontal="true"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:background="@drawable/brush1flip_button"
        android:textColor="@drawable/white_text_button"
        android:onClick="buyActions" />

    <Button
        android:layout_width="400dp"
        android:layout_height="85dp"
        android:text="View  Actions      "
        android:id="@+id/viewActionsBut"
        android:layout_below="@+id/buyActionsBut"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/brush1_button"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:textColor="@drawable/white_text_button"
        android:clickable="true"
        android:onClick="viewActions"/>

    </RelativeLayout>
    </ScrollView>